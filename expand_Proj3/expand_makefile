CC=gcc
CLARG_FILE="file"

line.o_: line.h line.c
	$(CC) -c line.c

hmap.o_: hmap.h hmap.c
	$(CC) -c hmap.c

clean:
	rm -f *.o a.out

build: expand.c hmap.o_ line.o_
	$(CC) expand.c hmap.o line.o -o eXeC

rebuild: clean expand.c hmap.o_ line.o_
	$(CC) expand.c hmap.o line.o -o eXeC

debug: rebuild
	valgrind --leak-check=yes ./eXeC $(CLARG_FILE)

